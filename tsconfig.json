{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"verbatimModuleSyntax": true,
		"declaration": true,
		"sourceMap": true,
		"lib": ["ES2024", "DOM"]
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules"]
}
